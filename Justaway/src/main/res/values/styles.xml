<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="BlackBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BlackTheme" parent="BlackBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="menu_action_bar">#818285</item>
        <item name="menu_text_color">#ffffff</item>
        <item name="menu_text_color_disabled">#666666</item>
        <item name="menu_background">#2b2b2b</item>
        <item name="menu_active_background">#1f1f1f</item>
        <item name="holo_background">#101112</item>
        <item name="text_color">#bebebe</item>
        <item name="button_stateful">@drawable/button_stateful</item>
        <item name="holo_green">@color/holo_green_light</item>
        <item name="holo_orange">@color/holo_orange_light</item>
        <item name="holo_red">@color/holo_red_light</item>
        <item name="holo_blue">@color/holo_blue_bright</item>
    </style>

    <style name="WhiteTheme" parent="WhiteBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#323232</item><!-- TextViewとか -->
        <item name="android:textColorPrimary">#323232</item><!-- EditTextとか -->
        <item name="android:buttonStyle">@style/WhiteButton</item>
        <item name="menu_action_bar">#979797</item>
        <item name="menu_text_color">#323232</item>
        <item name="menu_text_color_disabled">#b2b2b2</item>
        <item name="menu_background">#dcdcdc</item>
        <item name="menu_active_background">#808080</item>
        <item name="holo_background">#ffffff</item>
        <item name="text_color">#323232</item>
        <item name="button_stateful">@drawable/button_stateful_light</item>
        <item name="holo_green">@color/holo_green_dark</item>
        <item name="holo_orange">@color/holo_orange_dark</item>
        <item name="holo_red">@color/holo_red_dark</item>
        <item name="holo_blue">@color/holo_blue_dark</item>
    </style>

    <style name="WhiteButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@android:color/secondary_text_light</item><!-- Button -->
    </style>

    <drawable name="translucent_background">#99000000</drawable>

    <style name="Theme.MyTrans" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/translucent_background</item>
    </style>
</resources>
