<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:background="@android:color/background_dark"
              android:background="?attr/background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@android:color/background_dark"
        android:background="?attr/menu_background">

        <info.justaway.widget.ClearEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:id="@+id/searchWords"/>

        <info.justaway.widget.FontelloButton
            android:id="@+id/search_button"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            tools:background="@android:color/background_dark"
            android:background="?attr/button_stateful"
            android:text="@string/fontello_search"/>

        <info.justaway.widget.FontelloButton
            android:id="@+id/tweet_button"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            tools:background="@android:color/background_dark"
            android:background="?attr/button_stateful"
            android:text="@string/fontello_edit"/>

    </LinearLayout>

    <ListView
        android:id="@+id/search_list"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/guruguru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>